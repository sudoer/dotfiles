# USE GCC INSTEAD OF CLANG
export CPP='llvm-gcc'
export CC='llvm-gcc'
export CXX='llvm-g++'

# MAC SCREEN CAPTURES
alias screencap-screen='screencapture -mS $HOME/screenshots/screencap-$(date "+%Y%m%d-%H%M%S").png'
alias screencap-select='screencapture -io $HOME/screenshots/screencap-$(date "+%Y%m%d-%H%M%S").png'

# huh?
export REPO_BITSIGHT=$HOME/work/bs-repo

export INFRAV3_PER_SHELL=1
export INFRAV3_DEFAULT_NAMESPACE=alan-dev

# We should look for "python" (python2) from homebrew before the Apple one
path_prepend "/usr/local/opt/python@2/bin"
alias virtualenv2='/Users/alan/Library/Python/2.7/bin/virtualenv'

# EMDQ aliases
source $HOME/bb/bs-entity-manager/dev1/aliases.sh

# golang stuff - jira command line tool
path_append "$HOME/go/bin"

# python stuff
path_append "$HOME/Library/Python/3.9/bin"

# C/C++ compiling (needed for pyenv to build python)
export CC=/usr/bin/clang CPP= CXX=/usr/bin/clang++
export -n CPP

# groovy stuff
export GROOVY_HOME=/usr/local/opt/groovy/libexec

alias dict='/usr/local/bin/sdcv'
alias my-epic='jira epic-subtasks-open RP-98848'
alias em-epics="for epic in \$(jira em-epics | grep 'In Prog' | awk -F: '{print \$1}') ; do jira epic-subtasks-open \$epic ; done"

